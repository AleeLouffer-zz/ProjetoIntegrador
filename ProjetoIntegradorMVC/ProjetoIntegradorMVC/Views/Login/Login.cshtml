@{
    ViewData["Title"] = "Login";
}

<body>
    <div id="container">
        <h2>Login</h2>
        <form asp-action="Conta" method="post" id="register-form">
            <div class="full-box">
                <label for="emailUsuario" class="labelNome"></label>
                <input type="email" id="nomeProduto" placeholder="Email" />
            </div>
            <div class="full-box">
                <label for="senhaUsuario"></label>
                <input type="password" id="senhaUsuario"placeholder="Senha" />
            </div>
            <div>
                <input type="checkbox" name="manterlogado" id="manterlogado" value=""/>
                <label for="manterlogado">Manter-me Logado</label>
            </div>
            <div class="full-box">
                <input type="submit" id="Entrar" value="Entrar" />
            </div>
            <div class="Cadastro">
                <a asp-action="Cadastro">Cadastre-se</a>
            </div>
        </form>
    </div>
</body>