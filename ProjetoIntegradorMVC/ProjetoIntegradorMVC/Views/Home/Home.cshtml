@model IEnumerable<ProjetoIntegradorMVC.Models.Operacoes.Servico>

@{
    ViewData["Title"] = "Home";
}

<h1>Home</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Descrição
            </th>
            <th>
                Preço
            </th>
            <th>
                Tempo Estimado
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            @if (item.TempoEstimado > 0)
            {
                <td>
                    @Html.DisplayFor(modelItem => item.TempoEstimado);
                </td>
            }
            else
            {
            <td>
                 -
            </td>
            }
            <td>
                <a asp-action="Servico" asp-route-id="@item.Id">Selecionar Servico</a>
            </td>
        </tr>
}
    </tbody>
</table>
