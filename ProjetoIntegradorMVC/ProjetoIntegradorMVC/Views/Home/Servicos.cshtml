@model IEnumerable<ProjetoIntegradorMVC.Models.Operacoes.Servico>

@{
    ViewData["Title"] = "Servicos ";
}

<section class="busca">
    <div class="busca__com__icone">
        <input type="text" class="busca__input">
        <img class="icone__busca" src="~/Icones/search_black_24dp.svg" alt="Icone de busca">
    </div>
</section>
<section class="filtros">
    <div class="selecionar__pesquisa">
        @*Estes botoes levam as outras paginas*@
        <button class="filtros__selecionar">Empresa</button>
        <button class="filtros__selecionar  selecionar--empresa">Serviço</button>
    </div>
    <div class="filtros--fil">
        <button class="filtros__botao">Filtros</button>
        <img class="filtros--icone" src="~/Icones/filter_alt_black_24dp (1).svg" alt="Icone de filtro">
    </div>
</section>
<section class="empresas">
    @foreach (var servico in Model)
    {
    <div class="empresa">
        <p class="empresa__nome">@servico.Nome</p>
        <p class="empresa__endereco">@servico.Descricao</p>
        <p class="empresa__endereco">R$@servico.Preco</p>
        <p class="empresa__endereco">@servico.TempoEstimado</p>
        <p class="empresa__endereco">@servico.Local</p>
        <img src="#" alt="Avaliação da empresa" class="empresa__avaliacao">
    </div>
    }
</section>