@model ProjetoIntegradorMVC.Models.Usuario

@{
    ViewData["Title"] = "Registro";
}

<body class="body-registro">
    <div class="registro-conteiner">
        <h1 class="titulo-registro">Registro</h1>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Registro">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="Email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Senha" class="form-control" placeholder="Senha"/>
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Registrar-se" class="botao-entrar" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
